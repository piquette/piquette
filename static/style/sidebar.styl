.off-canvas .off-canvas-sidebar
  width: 12rem
  position: fixed !important

.pq-sidebar .pq-nav
  bottom: 1.5rem
  -webkit-overflow-scrolling: touch
  overflow-y: auto
  padding: .5rem 0rem
  position: fixed
  top: 3.5rem
  width: 12rem

.pq-sidebar .menu
  padding: 0


.pq-sidebar .menu .menu-item
  color: #5b657a
  font-size: .65rem
  font-weight: 600
  text-transform: uppercase
  font-size: .7rem
  .current
    background: alpha($theme-green, 0.1)
    border-right: 3px solid $theme-green
  a
    padding: 0.5rem 1.4rem
    border-right: 3px solid transparent
  
    &:hover
      background: alpha($theme-green, 0.1) !important
      border-right: 3px solid $theme-green



@media (max-width: 960px)
  .pq-sidebar .pq-brand
    margin: .85rem 1.5rem
    padding: 0
    position: static

  .pq-sidebar .pq-nav
    margin-top: 1rem
    position: static

  .pq-sidebar .menu .menu-item > a
    padding: .3rem .4rem


@media (max-width: 600px)
  .pq-sidebar .pq-brand
    margin: .85rem 1rem

  .pq-sidebar .pq-nav
    padding: .5rem 1rem
